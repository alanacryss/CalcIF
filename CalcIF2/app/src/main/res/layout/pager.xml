        android:layout_gravity="center_horizontal" >-->

        <TextView
            android:id="@+id/tvExpOrigin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:text="Expressão original:"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/tvFormatOrigin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@color/textcolor"
            android:layout_below="@id/tvExpOrigin"/>

        <TextView
            android:id="@+id/tvExpPosfixa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Expressão posfixa:"
            android:textSize="30dp"
            android:layout_below="@+id/tvFormatOrigin"/>

        <TextView
            android:id="@+id/tvFormatPosfixa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@color/textcolor"
