<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jho.alana.calcif.MainActivity"
    tools:showIn="@layout/activity_main">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/tvCalc"
        android:editable="false"
        android:textSize="20dp"
        android:background="@color/textcolor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tvPosfixa"
        android:layout_below="@id/tvCalc"
        android:text="@string/expressao"
        android:textSize="25dp"
        android:textColor="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tvExp"
        android:layout_below="@id/tvPosfixa"
        android:text="ABC+DE-"
        android:textSize="22dp" />

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tvResult"
        android:layout_below="@id/tvExp"
        android:text="Resultado"
        android:textSize="25dp"
        android:background="#dcdcdc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tvResExp"
        android:layout_below="@id/tvResult"
        android:text="Resultado"
        android:textSize="22dp"/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="1"
        android:textSize="30dp"
        android:id="@+id/btn1"
        android:layout_below="@+id/tvExp"
        android:layout_alignParentStart="true"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="2"
        android:textSize="30dp"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="3"
        android:textSize="30dp"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="4"
        android:textSize="30dp"
        android:id="@+id/btn4"
        android:layout_below="@id/btn1"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="5"
        android:textSize="30dp"
        android:id="@+id/btn5"
        android:layout_alignTop="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="6"
        android:textSize="30dp"
        android:id="@+id/btn6"
        android:layout_alignTop="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="7"
        android:textSize="30dp"
        android:id="@+id/btn7"
        android:layout_below="@id/btn4"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="8"
        android:textSize="30dp"
        android:id="@+id/btn8"
        android:layout_alignTop="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="9"
        android:textSize="30dp"
        android:id="@+id/btn9"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="("
        android:textSize="30dp"
        android:id="@+id/btnParentLeft"
        android:layout_below="@id/btn7"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/btnZero"
        android:layout_alignTop="@+id/btnParentLeft"
        android:layout_toEndOf="@+id/btnParentLeft"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text=")"
        android:textSize="30dp"
        android:id="@+id/btnParentRight"
        android:layout_alignTop="@+id/btnZero"
        android:layout_toEndOf="@+id/btnZero"
        android:background="@color/btncolor"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="30dp"
        android:id="@+id/btnSum"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:background="@color/btncolorop"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="30dp"
        android:id="@+id/btnSubt"
        android:layout_alignTop="@+id/btn6"
        android:layout_toEndOf="@+id/btn6"
        android:background="@color/btncolorop"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:textSize="25dp"
        android:id="@+id/btnMult"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:background="@color/btncolorop"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="/"
        android:textSize="25dp"
        android:id="@+id/btnDiv"
        android:layout_alignTop="@+id/btnParentRight"
        android:layout_toEndOf="@+id/btnParentRight"
        android:background="@color/btncolorop"
        android:textColor="@color/textcolor"
        android:onClick="addNumber"/>

</RelativeLayout>
